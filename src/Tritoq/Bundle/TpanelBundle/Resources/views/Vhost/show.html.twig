{% extends 'TritoqTpanelBundle::layout.html.twig' %}

{% block body -%}
    <h1>Vhost</h1>

    <table class="record_properties table table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Usuário</th>
            <td>{{ entity.user }}</td>
        </tr>
        <tr>
            <th>Senha</th>
            <td>{{ entity.password }}</td>
        </tr>
        <tr>
            <th>Domínio</th>
            <td>{{ entity.domain }}</td>
        </tr>
        <tr>
            <th>IP</th>
            <td>{{ entity.ip }}</td>
        </tr>
        <tr>
            <th>Admin E-mail</th>
            <td>{{ entity.adminEmail }}</td>
        </tr>
        <tr>
            <th>Data de criação</th>
            <td>{{ entity.dateCreated.format('d/m/Y H:i:s') }}</td>
        </tr>
        <tr>
            <th>Vhost</th>
            <td><pre>{{ entity.vhost }}</pre></td>
        </tr>
        <tr>
            <th>Nginx</th>
            <td><pre>{{ entity.nginx }}</pre></td>
        </tr>
        </tbody>
    </table>
    {{ include('TritoqTpanelBundle:Default:record-actions.html.twig', {'entity': entity, 'route': 'vhost', 'delete_form': delete_form}) }}
{% endblock %}
